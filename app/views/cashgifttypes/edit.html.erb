<section>
  <div class="container">
<h1>Edit Your <% if @cg %>Cash Gift<% else %>Donation<% end %></h1>
<br/>
  <%= form_for(@cashgifttype) do |f| %>
      <center>
        <div style="width:600px;color: #6d5669;">
        <br />
        <%= f.hidden_field :is_donation %>
        <br />
        <table width="95%">
                    <tr style="margin:5px;">
                            <td width="45%"><center><p style="color: #6d5669;"><b>*Name Of <% if @cg %>Cash Gift<% else %>Donation<% end %></b></p></center></td>
                            <td width="10%"></td>
                            <td width="45%"><center><p style="color: #6d5669;"><b>*($)Goal Amount</b></p></center></td>
                    <tr/>
                    <tr style="margin:5px;">
                            <td width="45%"><center><%= f.text_field :title, :class=>"loginFormSize" %></center></td>
                            <td width="10%"></td>
                            <td width="45%"><center><%= f.text_field :goal, :class=>"loginFormSize" %></center></td>
                    <tr/>
                  </table>
          <center><span style="color: #6d5669;">Currency:</span> <%= f.select(:currency, options_for_select([["US Dollars", "USD"], ["Canadian Dollars", "CAD"]], selected: @cashgifttype.currency)) %></center>
  <br />
        <p style="color: #6d5669;">Description</p>
      <%= f.text_area :description, :size => "75x2" %><br />
      <!--<% f.check_box :shown %><br />-->
      </center>
      <center>
      <br />
        <%= f.hidden_field :event_id %>
      <%= image_tag @cashgifttype.cgp_url(:newsfeed), style: "-webkit-box-shadow:rgba(0,0,0,0.6) 0 6px 15px;-moz-box-shadow:rgba(0,0,0,0.6) 0 6px 15px;box-shadow:rgba(0,0,0,0.6) 0 6px 15px;width:100px;height:100px;" %>
      <div class="clearfloat"></div>
        <br />
      <p style="color: #6d5669;">Upload A Photo</p>
      <%= f.file_field :cgp %><br />
            <br />
        <p style="color: #6d5669;">Include This Cash Gift As An Option <span style="position:relative;top:-3px;"<%= f.check_box  :shown%></p>

<br />
       <% if @cg %>
      <%= f.submit "Update This Cash Gift", :class => 'btn btn-success',:style=>"width:200px;"%>
       <% else %>
            <%= f.submit "Update This Donation", :class => 'btn btn-success',:style=>"width:200px;"%>
       <% end %>
        </div>
      </center>
  <% end %>
  <br />

</div>
</section>

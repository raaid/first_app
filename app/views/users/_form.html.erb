<%= form_for @user, html: { multipart: true } do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h1><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h1>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= image_tag @user.avatar_url(:profile) %>

  <div class="field">
    <%= f.label :avatar, "Upload a New Profile Picture" %>
    <%= f.file_field :avatar %>
  </div>
  <div class="field">
    <%= f.label :photourl, "Or, Provide the URL of a photo to use" %>
    <%= f.text_field :photourl %>
  </div>
  <div class="field">
    <%= f.label :fname, "First Name" %>
    <%= f.text_field :fname %>
  </div>
  <div class="field">
    <%= f.label :lname, "Last Name" %>
    <%= f.text_field :lname %>
  </div>
  <div class="field">
    <%= f.label :email, "E-Mail Address" %>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :gender %>
    <%= f.text_field :gender %>
  </div>

  <div class="field">
    <%= f.label :birthday %>
    <%= f.date_select :birthday, { start_year: 1900, end_year: Time.now.year, include_blank: true } %>
  </div>
  <div class="field">
    <%= f.label :anniversary %>
    <%= f.date_select :anniversary, start_year: 1900, :include_blank => true %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :province %>
    <%= f.text_field :province %>
  </div>
  <div class="field">
    <%= f.label :country %>
    <%= f.text_field :country %>
  </div>
  <div class="field">
    <%= f.label :postal, "Postal/Zip Code" %>
    <%= f.text_field :postal %>
  </div>

  Enter a new password and confirmation to change your password:
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Confirmation" %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit "Save Changes" %>
  </div>
<% end %>

<h3>Sizes</h3>
<%= render partial: 'sizes/size', object: @user.user_size %>


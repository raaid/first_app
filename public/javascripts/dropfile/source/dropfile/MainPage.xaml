<UserControl x:Class="DropFile.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot" AllowDrop="True" Background="Transparent" >
        <Canvas x:Name="PhotoBoard" Background="Transparent">
            <!-- Photos dynamically inserted here -->
        </Canvas>
        <TextBlock x:Name="Instructions" Text="Drop files here" Foreground="Gray" FontSize="20" TextWrapping="Wrap"  HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Grid>
</UserControl>
